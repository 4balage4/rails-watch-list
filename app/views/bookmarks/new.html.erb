
<div class="container" >
  <div class="text-center mb-5">
    <h2> Add new bookmark to your "<%= @list.name.capitalize %>" list  </h2>
  </div>
 
  <div class="border rounded p-4 my-4">
    <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment, placeholder: "Enter your comment" %>
    <%= f.association :movie %>
      <div class="buttons-container">
        <%= f.submit class: 'btn btn-flat ' %>
        <button class='btn btn-flat'><%= link_to "back to all lists ", lists_path %></button>
        <button class='btn btn-flat'><%= link_to "back to your list ", list_path(@list) %></button>
        <% end %>
      </div>
  </div>

</div>
